{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@modals/*": [
        "app/modals/*"
      ],
      "@models/*": [
        "app/models/*"
      ],
      "@layouts/*": [
        "app/layouts/*"
      ],
      "@core/*": [
        "app/core/*"
      ],
      "@services/*": [
        "app/services/*"
      ],
      "@routes/*": [
        "app/routes/*"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@modules/*": [
        "app/modules/*"
      ],
      "@components/*": [
        "app/components/*"
      ],
      "@utils/*": [
        "app/utils/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@libs/*": [
        "libraries/*"
      ],
      "@env/*": [
        "environments/*"
      ],
      "@testing/*": [
        "testing/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
